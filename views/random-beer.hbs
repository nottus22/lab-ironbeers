<div class="random">
    {{#each randomBeer}}
    <img src="{{this.image_url}}" alt="random beer photo">
        <div class="rand-beer-info">
            <h2>{{this.name}}</h2>
            <p class="tag">{{this.tagline}}</p>
            <p>{{this.description}}</p>
            <h3>Food Pairing</h3>
                <ul>
                    {{#each this.food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            <p><b>Brewer's Tips:</b> {{this.brewers_tips}}</p>
        </div>
    {{/each}}
</div>